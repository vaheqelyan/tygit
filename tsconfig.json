{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "es5",
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "build",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "downlevelIteration":true,
        "importHelpers":true,
        "lib": ["ES2015", 
            "es2015.collection",
            "es2015.iterable"],
        "alwaysStrict":false
    },
    "types": ["node", "blessed", "reflect-metadata"],
    "include": ["src/*", "src/**/*"]
}
